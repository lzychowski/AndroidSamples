<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yolonerds.dstreasurechest.Settings"
    android:background="#333333">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/accent_material_light"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/expac_header"
        android:id="@+id/expac_text"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="#ffffff" />

    <!-- SWITCH GROUP -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DKQ_switch"
        android:layout_below="@+id/expac_text"
        android:layout_alignLeft="@+id/expac_text"
        android:layout_alignStart="@+id/expac_text"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/DKQ_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/DKQ_switch"
        android:layout_toRightOf="@+id/DKQ_switch"
        android:layout_toEndOf="@+id/DKQ_switch"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <!-- SWITCH GROUP -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AC_switch"
        android:layout_below="@+id/DKQ_switch"
        android:layout_alignLeft="@+id/DKQ_switch"
        android:layout_alignStart="@+id/DKQ_switch"
        android:layout_marginTop="15dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/AC_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/AC_switch"
        android:layout_toRightOf="@+id/AC_switch"
        android:layout_toEndOf="@+id/AC_switch"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <!-- SWITCH GROUP -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RTV_switch"
        android:layout_below="@+id/AC_switch"
        android:layout_alignLeft="@+id/AC_switch"
        android:layout_alignStart="@+id/AC_switch"
        android:layout_marginTop="15dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/RTV_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/RTV_switch"
        android:layout_toRightOf="@+id/RTV_switch"
        android:layout_toEndOf="@+id/RTV_switch"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <!-- SWITCH GROUP -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IC_switch"
        android:layout_below="@+id/RTV_switch"
        android:layout_alignLeft="@+id/RTV_switch"
        android:layout_alignStart="@+id/RTV_switch"
        android:layout_marginTop="15dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/IC_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/IC_switch"
        android:layout_toRightOf="@+id/IC_switch"
        android:layout_toEndOf="@+id/IC_switch"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView3"
        android:textColor="#ffffff" />

    <!-- SWITCH GROUP -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WOG_switch"
        android:layout_below="@+id/IC_switch"
        android:layout_alignLeft="@+id/IC_switch"
        android:layout_alignStart="@+id/IC_switch"
        android:layout_marginTop="15dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/WOG_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/WOG_switch"
        android:layout_toRightOf="@+id/WOG_switch"
        android:layout_toEndOf="@+id/WOG_switch"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <!-- SWITCH GROUP -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TOH_switch"
        android:layout_below="@+id/WOG_switch"
        android:layout_alignLeft="@+id/WOG_switch"
        android:layout_alignStart="@+id/WOG_switch"
        android:layout_marginTop="15dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/TOH_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/TOH_switch"
        android:layout_toRightOf="@+id/TOH_switch"
        android:layout_toEndOf="@+id/TOH_switch"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView2"
        android:textColor="#ffffff" />

    <!-- LEVEL selection -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/level_header"
        android:id="@+id/level_text"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/TOH_switch"
        android:layout_alignLeft="@+id/expac_text"
        android:layout_alignStart="@+id/expac_text"
        android:textColor="#ffffff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_switch"
        android:checked="false"
        android:layout_below="@+id/level_text"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yes"
        android:id="@+id/level_switch_text"
        android:layout_alignBottom="@+id/level_switch"
        android:layout_toRightOf="@+id/level_switch"
        android:layout_toEndOf="@+id/level_switch"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leve_seekbar"
        android:layout_gravity="center"
        android:layout_alignRight="@+id/level_text"
        android:layout_alignEnd="@+id/level_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:max="10"
        android:minHeight="5dp"
        android:maxHeight="5dp"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Level 0"
        android:id="@+id/level_seekbar_text"
        android:layout_alignTop="@+id/leve_seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff" />

</RelativeLayout>
